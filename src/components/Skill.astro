---
// imports
import type { SkillProps } from "@/types/skill";
import { Icon } from "astro-icon/components";

const {
  icon,
  name,
  description,
  showDescription = true,
} = Astro.props as SkillProps;
---

<div class="flex flex-col gap-2 bg-zinc-800 p-4 rounded-md">
  <div class="w-10 h-10">
    <Icon width={40} height={40} name={icon} class="text-fuchsia-500" />
  </div>
  <h3 class="text-lg font-bold">{name}</h3>
  {showDescription && <p class="text-neutral-400">{description}</p>}
</div>
