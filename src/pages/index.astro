---
// data imports
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { jobs } from "@/data/job.ts";
import { education } from "@/data/education.ts";
import { skills } from "@/data/skill";

// component imports
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Profile from "@/components/Profile.astro";
import AboutMe from "@/components/AboutMe.astro";
import Job from "@/components/Job.astro";
import Education from "@/components/Education.astro";
import Skill from "@/components/Skill.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <Profile />

      <div class="w-full relative flex flex-col gap-8 text-n700 mt-4">
        {/*About me*/}
        <div class="mb-4">
          <h2 class="text-3xl font-bold mb-4">About me</h2>
          <AboutMe />
        </div>

        {/*Work experience*/}
        <div class="mb-4">
          <h2 class="text-3xl font-bold mb-4">Work experience</h2>

          <div class="flex flex-col gap-8">
            {jobs.map((j) => <Job data={j} />)}
          </div>
        </div>

        {/*Education*/}
        <div class="mb-4">
          <h2 class="text-3xl font-bold mb-4">Education</h2>
          <div class="flex flex-col gap-6">
            {education.map((e) => <Education data={e} />)}
          </div>
        </div>

        {/*Skills*/}
        <div class="mb-4">
          <h2 class="text-3xl font-bold mb-4">Skills</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {skills.map((s) => <Skill {...s} />)}
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
